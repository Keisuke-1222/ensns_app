<div class="col-9">
  <div class="d-flex align-items-center notes__line">
    <h4><%= current_user?(@user) ? "Your and Following's Notes" : "#{@user.name}'s Notes" %></h4>
    <div class="ml-auto notes__linkBox">
      <% if current_user?(@user) %>
        <%= link_to 'New Note', new_note_path, class: 'btn btn-outline-dark' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% @notes.each do |note| %>
      <div class="col-sm-6 col-md-4">
        <div class="card">
          <div class="card-header">
            <%= link_to note do %>
              <h4><%= note.title %></h4>
            <% end %>
          </div>
          <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted"><%= note.created_at.to_s(:datetime_jp) %></h6>
            <p class="card-text"><%= note.body.truncate(50) %></p>
          </div>
          <div class="card-footer">
            Author: <%= note.user.name %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @notes %>
</div>
