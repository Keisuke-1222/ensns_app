<%= render 'shared/error_messages.html.erb' %>

<%= form_for note do |f| %>
  <div class="form-group">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body, 'Text' %>
    <%= f.text_area :body, class: 'form-control', rows: 15 %>
  </div>
  <%= f.submit 'Store', class: 'btn btn-primary' %>
<% end %>
