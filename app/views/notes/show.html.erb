<%= provide(:title, @note.title) %>
<div class="container">
  <div class="d-flex align-items-center mt-4 mb-4">
    <div class="ml-auto boards__linkBox">
      <%= link_to 'All Notes', current_user, class: "btn btn-outline-dark" %>
      <% if current_user == @note.user %>
        <%= link_to 'Edit Note', edit_note_path(@note), class: "btn btn-outline-dark" %>
        <%= link_to 'Delete Note', note_path(@note), method: :delete, class: "btn btn-outline-dark", data: { confirm: '削除してもよろしいですか？' } %>
      <% end %>
    </div>
  </div>

  <%= render @note %>
</div>
