<% if user_signed_in? %>
  <%= form_tag boards_path, method: "get" do %>
    <% if params[:favorite] == "1" %>
      <%= check_box_tag :favorite, 1, true, { onchange: "submit(this.form);" } %>
    <% else %>
      <%= check_box_tag :favorite, 1, false, { onchange: "submit(this.form);" } %>
    <% end %>
    <%= label_tag "お気に入りのみ表示する" %>
  <% end %>
<% end %>
